{
  "ts-node": {
    "files": true
  },
  "files": ["app.ts"],
  "exclude": ["node_modules", "_*/*", "*/*.js"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"]
  }
}
